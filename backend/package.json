{
  "name": "@sub-vocab/backend",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@9.12.2",
  "scripts": {
    "dev": "tsx watch --env-file=.env app",
    "introspect": "drizzle-kit introspect",
    "build": "tsc && npm run copy-files",
    "copy-files": "cp -R public dist/backend",
