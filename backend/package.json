    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "date-fns": "^3.6.0",
    "debug": "^4.3.7",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "hbs": "^4.2.0",
    "http-errors": "^2.0.0",
    "lru-cache": "^11.0.1",
    "morgan": "^1.10.0",
