    "lint": "eslint . --report-unused-disable-directives",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "@trpc/react-query": "11.0.0-rc.566",
    "@trpc/server": "11.0.0-rc.566",
    "@types/cookie": "^0.6.0",
    "cookie": "^1.0.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "debug": "^4.3.7",
    "drizzle-orm": "^0.35.3",
    "express": "^5.0.1",
    "http-errors": "^2.0.0",
    "morgan": "^1.10.0",
    "postgres": "^3.4.5"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/debug": "^4.1.12",
    "@types/express": "^5.0.0",
    "@types/http-errors": "^2.0.4",
    "@types/morgan": "^1.9.9",
    "drizzle-kit": "^0.26.2",
    "tsx": "^4.19.1"
  }
