    "@types/express": "^4.17.21",
    "@types/http-errors": "^2.0.4",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.5.4",
    "eslint": "^9.10.0",
    "tsx": "^4.19.0",
    "typescript": "^5.5.4"
  },
  "pnpm": {
    "overrides": {
      "hasown": "npm:@nolyfill/hasown@^1",
      "is-core-module": "npm:@nolyfill/is-core-module@^1",
      "side-channel": "npm:@nolyfill/side-channel@^1"
