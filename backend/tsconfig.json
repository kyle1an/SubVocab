{
  "compilerOptions": {
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,

    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",

    "lib": ["ESNext"]
  },
  "include": [
    ".eslintrc.js",
    ".eslintrc.cjs",
    "**/*.config.js",
    "**/*.config.cjs",
    "**/*.config.ts",
    "**/*.js",
    "**/*.ts",
    "src/**/*.ts",
    "**/*.d.ts",
    "src/**/*.d.ts"
  ]
}
