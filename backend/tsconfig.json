{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "commonjs",
    "target": "es2022",
    "types": ["node"],
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./built",
    "moduleResolution": "node"
  },
  "include": [
    ".eslintrc.js",
    "**/*.js",
    "**/*.ts",
    "**/*.d.ts",
    "**/*.tsx",
    "**/*.vue"
  ]
}
