/* ──────── Fira Mono, IBM Plex Mono ui-monospace */
import(mono, @(path, dir, weight, style) {
    local('SF Mono '+ weight + (style == 'Italic'? ' Italic':'')) \, src_url(path, dir, weight, style);
}

);

import(comp, @(path, dir, weight, style) {
    local('SF Compact Text '+ weight + (style == 'Italic'? ' Italic':'')) \,src_url(path, dir, weight, style);
}
);
// @formatter:off
$UNI__zh=U+4E00-9FFF, U+3400-4DBF, U+20000-2A6DF, U+F900-FAFF, U+2F800-2FA1F;
// U+2A700–2B73F, U+2B740–2B81F, U+2B820–2CEAF,
// @formatter:on

$zh-fonts = '宋体', '微軟正黑體', '微软雅黑', 'Hiragino Sans GB', 'Microsoft JhengHei', 'Microsoft Yahei';

zh_f = {
	families: $zh-fonts, weight: weights, unicode: $UNI__zh, dir: '/Fonts/SF-Pro-Text-'
}

zh_font(o, fn) {
  for font-name in o[families] {
    @font-face {
      font-family: font-name;
      src: fn(path, o[dir], o[weights], style, font-name);
      unicode-range: o[unicode];
    }
  }
}

